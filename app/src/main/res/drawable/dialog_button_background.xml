<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#30B794F6"
                android:endColor="#20B794F6"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#B794F6" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20B794F6"
                android:endColor="#10B794F6"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#9F7AEA" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#10B794F6"
                android:endColor="#05B794F6"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#60B794F6" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>