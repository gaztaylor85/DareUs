<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/premium_gradient_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Flexible Spacer Top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Logo Section - Your Beautiful DareUs Logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Your DareUs Logo -->
            <ImageView
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:src="@drawable/dareus_logo"
                android:layout_marginBottom="16dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

        </LinearLayout>

        <!-- Sign-In Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/glass_card"
            android:padding="20dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="16dp">

            <!-- Welcome Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready for your next adventure?"
                android:textSize="12sp"
                android:textColor="#D6BCFA"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Email Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="#E8BBE8"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Enter your email"
                android:textColor="#FFFFFF"
                android:textColorHint="#9F7AEA"
                android:background="@drawable/premium_input_field"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- Password Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="12sp"
                android:textColor="#E8BBE8"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Enter your password"
                android:textColor="#FFFFFF"
                android:textColorHint="#9F7AEA"
                android:background="@drawable/premium_input_field"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <!-- Confirm Password Input -->
            <!-- Confirm Password Input -->
            <TextView
                android:id="@+id/textViewConfirmPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="12sp"
                android:textColor="#E8BBE8"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Confirm your password"
                android:textColor="#FFFFFF"
                android:textColorHint="#9F7AEA"
                android:background="@drawable/premium_input_field"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <!-- Forgot Password -->
            <TextView
                android:id="@+id/textViewForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:layout_gravity="end"
                android:textColor="#B794F6"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"/>

            <!-- Sign In Button -->
            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Sign In"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/premium_button_gradient"
                android:layout_marginBottom="10dp"
                android:elevation="8dp"/>

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#60B794F6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  or  "
                    android:textColor="#9F7AEA"
                    android:textSize="9sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#60B794F6"/>

            </LinearLayout>

            <!-- Create Account Button -->
            <Button
                android:id="@+id/buttonSignUp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Create New Account"
                android:textColor="#D6BCFA"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/premium_button_outline"
                android:elevation="4dp"/>

        </LinearLayout>

        <!-- Flexible Spacer Bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</ScrollView>